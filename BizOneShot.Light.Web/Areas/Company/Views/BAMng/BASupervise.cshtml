@model IList<BizOneShot.Light.Models.ViewModels.BASuperviseViewModel>

@{
    Layout = "~/Areas/Company/Views/Shared/_MainDetailLayout.cshtml";
}
<script>
    $(document).ready(function () {

        $('.vc_iconSB_06').addClass('on01'); // 보고서 icon
        $('.vc_title_02').addClass('on');    // 보고서 label
        $('.a_label01').addClass('on');      // 보고서 내부 메뉴 label (기초경영역량 문진표)


    });
</script>
<div class="tcms">
    <div class="main_top short">
        <div class="sub_right_title right_text">
            <div class="list_icon"></div><div class="sub_title">전문기관(BA) 조회</div>
            @RenderPage("~/Areas/Company/Views/Shared/_MainTopMenuPartial.cshtml")
        </div>
    </div>
    <div class="main_mid">

        <div class="tablewrap">
            <table class="admin_list">
                <caption>BA 목록</caption>
                <colgroup>
                    <col width="30%">
                    <col width="15%">
                    <col width="35%">
                    <col width="10%">
                    <col width="10%">
                </colgroup>
                <tr>
                    <th class="topcen">전문기관(BA)명</th>
                    <th class="topcen">전화번호</th>
                    <th class="topcen">E-Mail</th>
                    <th class="topcen">컨설팅코드</th>
                    <th class="topcen">담당멘토</th>
                </tr>

                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="5" style="text-align:center;">매핑 결과가 없습니다.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BA_NM</td>
                            <td>@item.BA_TEL_NO</td>
                            <td>@item.BA_EMAIL</td>
                            <td>@item.CON_CODE</td>
                            @if (item.MENTOR_NM == null)
                            {
                                <td>-</td>
                                    <!-- BA_SN값을 추가해서 -->
                            }
                            else
                            {
                                <td>@item.MENTOR_NM</td>
                            }
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

